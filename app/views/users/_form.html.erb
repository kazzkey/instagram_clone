<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "件のエラー") %> </h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="form-group col-xs-12">
    <%= form.text_field :name, placeholder: "ユーザーネーム" %>
  </div>

  <div class="form-group col-xs-12">
    <%= form.text_field :email, placeholder: "メールアドレス" %>
  </div>

  <% if logged_in? %>
    <div class="image col-xs-12">
      <%= form.file_field :image %>
    </div>

    <div class="textarea col-xs-12">
      <%= form.label :profile %><br>
      <%= form.text_area :profile %>
    </div>
  <% else %>
    <div class="form-group col-xs-12">
      <%= form.password_field :password, placeholder: "パスワード" %>
    </div>

    <div class="form-group col-xs-12">
      <%= form.password_field :password_confirmation, placeholder: "確認用パスワード" %>
    </div>
  <% end %>
  <div class="col-xs-12">
    <div class="btn ok-btn col-xs-12">
      <%= form.submit "登録する" %>
    </div>
  </div>
<% end %>
